@{
    ViewData["Title"] = "Request Supplies";
}
@model Request

    <div class="container mt-3">
        <h1>@ViewData["Title"]</h1>

        <form method="post">
            <div class="form-group">
                <label asp-for="HumanitarianId">Requesting Organization:</label>
                <select asp-for="HumanitarianId" class="form-control">
                    @foreach (var hum in ViewBag.hums)
                    {
                        <option value="@hum.OrgId">@hum.OrgName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ProductId">Requested Product:</label>
                <select asp-for="ProductId" class="form-control">
                    @foreach (var prod in ViewBag.prod)
                    {
                        <option value="@prod.ProductId">@prod.ProductName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Amount">Quantity Required:</label>
                <input type="number" asp-for="Amount" class="form-control" required />
            </div>
            <div class="form-group">
                <label asp-for="AidType">Aid Type:</label>
                <select asp-for="AidType" class="form-control">
                    <option>Natural Disaster Recovery</option>
                    <option>Refugee Assistance</option>
                    <option>Third World Production</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Notes">Other notes:</label>
                <textarea asp-for="Notes" class="form-control"></textarea>
            </div>
            <input asp-for="TimeStamp" value="@DateTime.Now" type="hidden" />
            <button class="btn btn-primary float-right" type="submit">Submit Request</button>
        </form>
    </div>
