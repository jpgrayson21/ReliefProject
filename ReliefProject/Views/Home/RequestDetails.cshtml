@{
}


@model Request

<h2>Request by @ViewBag.hum.OrgName</h2>
<br />
<div class="row">
    <div class="col-3">
        <h4>Requested Product:</h4>
        <h4>Requested Quantity:</h4>
        <h4>Type of Aid:</h4>
    </div>
    <div class="col-6">
        <h4>@ViewBag.prod.ProductName</h4>
        <h4>@Model.Amount</h4>
        <h4>@Model.AidType</h4>
    </div>
    <div class="col-3">
        <a class="btn btn-primary text-white" asp-action="FulfillRequest">Fulfill Request</a>
    </div>
</div>
 
<br />
<p><b>Notes:</b> @Model.Notes</p>
<br /><br />

<div class="row">
    <div class="col-3">
        <h4>Previous Interactions:</h4>
    </div>
    <div class="col">
        @foreach (var don in ViewBag.dons)
            {
                <div class="card col-4">
                    <div class="card-header">
                        @don.TimeStamp
                    </div>
                    <div class="card-body">
                        @*Currently not available in Alpha testing*@
                        <a class="btn btn-sm btn-secondary" asp-action="ViewRequests">Donation Details</a>
                    </div>
                </div>
            }
    </div>
</div>
